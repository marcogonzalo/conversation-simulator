FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Set environment variables
ENV NODE_ENV=test
ENV NEXT_PUBLIC_API_URL=http://localhost:8000

# Create test directories
RUN mkdir -p /app/coverage

# Default command
CMD ["npm", "run", "test:coverage"]
